<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="app" package="mt.ld.md31" version="1.0.0" company="blackmagicTeam"  />
	
	<!-- output -->
	<app main="App" file="app" path="bin" swf-version="11.9" />
	
	<window background="#000000" fps="61" />
	
	<window width="1770" height="750" unless="mobile" />
	
	<!--
	<window width="940" height="400" unless="mobile" />
	-->
	<window vsync="true" antialiasing="0" if="cpp" orientation="auto" resizable="true" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="format" />
	<haxelib name="hxmidilib" />
	<haxelib name="h3d" />
	<haxelib name="hxsl" if="flash"/>
	
	<assets path="assets" rename="assets" />
	<haxeflag name="-dce" value="no" />

	<section unless="debug">
		<haxeflag name="--no-traces" />
	</section>
</project>